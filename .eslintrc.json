{
	"parser": "@typescript-eslint/parser",
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"plugins": ["react-hooks"],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"react-hooks/rules-of-hooks": "error",
		"react-hooks/exhaustive-deps": "warn"
	}
}
